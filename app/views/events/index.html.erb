<div class="row d-flex align-items-center justify-content-center">
  <div class="col-md-6">
    <div class="card mt-5">
      <div class="events-container">
        <div class="title-events ">
          <img src="https://see.fontimg.com/api/renderfont4/9Y350/eyJyIjoiZnMiLCJoIjo0NCwidyI6MTAwMCwiZnMiOjQ0LCJmZ2MiOiIjMTc1QTFDIiwiYmdjIjoiI0ZGRkZGRiIsInQiOjF9/RXZlbnRz/grooved-personal-use-regular.png" alt="Cool fonts">
        </div>
        <div class="accordion" id="accordionExample">
          <% @events.each do |event| %>
            <div class="accordion-item event-card">
              <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= event.id %>" aria-expanded="true" aria-controls="collapseOne">
                  <strong><%= event.name %></strong>
                </button>
              </h2>
              <div id="collapse-<%= event.id %>" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                  <div class="events_list_btn">
                    <div class="events_list">
                      <li style='list-style: none;'><%= event.name %></li>
                      <li style='list-style: none;'><%= event.date.strftime("%d-%m-%Y") %></li>
                      <li style='list-style: none;'><%= event.trail.name %></li>
                    </div>
                    <% if event.users.first == current_user %>
                      <%= link_to "Edit", edit_event_path(event), class: "btn btn-login" %>
                    <% end %>
                    <% if event.users.include?(current_user) %>
                      <%= link_to "Join", event_path(event), class: "btn btn-login" %>
                    <% else %>
                      <%= link_to "Join", event_users_path(param: event), method: :post, class: "btn btn-login" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
