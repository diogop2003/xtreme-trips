



<div class="accordion" id="accordionExample">
  <% @events.each do |event| %>
    <div class="accordion-item event-card">
      <h2 class="accordion-header" id="headingOne">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= event.id %>" aria-expanded="true" aria-controls="collapseOne">
          <%= event.name %>
        </button>
      </h2>
      <div id="collapse-<%= event.id %>" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <div class="info">
            <li style='list-style: none;'><strong><%= event.date %></strong></li>
            <%# <%= link_to "Open Event", event_path(event), class: "btn btn-outline-success" %>
            <li style='list-style: none;'><strong><%= event.trail.name %></li>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
