
<div class="events-container">
  <div class="title-events ">
    <h2><strong>My events</strong></h2>
  </div>
  <div class="accordion" id="accordionExample">
    <% @events.each do |event| %>
      <div class="accordion-item event-card">
        <h2 class="accordion-header" id="headingOne">
          <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= event.id %>" aria-expanded="true" aria-controls="collapseOne">
            <strong><%= event.name %></strong>
          </button>
        </h2>
        <div id="collapse-<%= event.id %>" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
          <div class="accordion-body">
            <div class="info">
              <li style='list-style: none;'><%= event.date %></li>
              <li style='list-style: none;'><%= event.trail.name %></li>
            </div>
              <%= link_to "Open Event", event_path(event), class: "btn-login" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
