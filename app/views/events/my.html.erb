
<div class="events-container">
  <div class="title-events ">
    <img src="https://see.fontimg.com/api/renderfont4/9Y350/eyJyIjoiZnMiLCJoIjo0NCwidyI6MTAwMCwiZnMiOjQ0LCJmZ2MiOiIjMTc1QTFDIiwiYmdjIjoiI0ZBRjlGOSIsInQiOjF9/bXkgZXZlbnRz/grooved-personal-use-regular.png" alt="Cool fonts">
  </div>
  <div class="accordion" id="accordionExample">
    <% @events.each do |event| %>
      <div class="accordion-item event-card">
        <h2 class="accordion-header" id="headingOne">
          <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= event.id %>" aria-expanded="true" aria-controls="collapseOne">
            <strong><%= event.name %></strong>
          </button>
        </h2>
        <div id="collapse-<%= event.id %>" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
          <div class="accordion-body">
            <div class="info">
              <li style='list-style: none;'><%= event.date.strftime("%d-%m-%Y") %></li>
              <li style='list-style: none;'><%= event.trail.name %></li>
            </div>
              <%= link_to "Open Event", event_path(event), class: "btn-login" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
